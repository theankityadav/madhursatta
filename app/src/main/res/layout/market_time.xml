<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/md_white_1000"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <com.madhuurstta.makta.latobold
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Market Time"
            android:textSize="18sp"
            android:background="@color/primary"
            android:padding="15dp"
            android:textColor="@color/md_white_1000"
            android:gravity="center"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/clock"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:src="@drawable/wait_clock"
                app:tint="@color/primary" />

            <com.madhuurstta.makta.latonormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Open Bid Last Time"
                android:textColor="@color/font"
                android:layout_toRightOf="@id/clock"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:id="@+id/title"
                />

            <com.madhuurstta.makta.latobold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/open_time"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="1:00 PM"
                android:textColor="@color/font"
                android:layout_toLeftOf="@id/title"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#28000000"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="25dp"
                android:layout_centerVertical="true"
                android:layout_height="25dp"
                android:src="@drawable/wait_clock"
                android:id="@+id/clock2"
                app:tint="@color/primary"
                />

            <com.madhuurstta.makta.latonormal
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Close Bid Last Time"
                android:textColor="@color/font"
                android:layout_toRightOf="@id/clock2"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:id="@+id/title2"
                />

            <com.madhuurstta.makta.latobold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="1:00 PM"
                android:textColor="@color/font"
                android:id="@+id/close_time"
                android:layout_toLeftOf="@id/title2"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#28000000"
            />


        <com.madhuurstta.makta.latobold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="Close"
            android:textColor="@color/md_white_1000"
            android:paddingTop="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingBottom="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/close"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            />


    </LinearLayout>

</androidx.cardview.widget.CardView>