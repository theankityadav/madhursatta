<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_image"
    tools:context=".earn">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@drawable/grad_button">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:src="@drawable/back"
                        app:tint="@color/md_white_1000" />


                    <com.madhuurstta.wbvjkmatka.latobold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:text="Refer and Earn"
                        android:textColor="@color/md_white_1000"
                        android:textSize="20sp" />


                </LinearLayout>


            </RelativeLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_below="@id/toolbar"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >


                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/refer_banner"
                        />

                    <com.madhuurstta.wbvjkmatka.latonormal
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/font"
                        android:layout_marginRight="20dp"
                        android:text="REFER APP TO YOUR FRIENDS AND EARN 10% OF FIRST DEPOSIT"
                        />

                    <com.madhuurstta.wbvjkmatka.latonormal
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/font"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:text="Your referral code"
                        />


                    <com.madhuurstta.wbvjkmatka.latobold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/code"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="XXXXXXX"
                        android:textColor="@color/font"
                        android:background="@drawable/select"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="25sp"
                        />

                    <com.madhuurstta.wbvjkmatka.latobold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:text="Share"
                        android:textColor="#fff"
                        android:background="@drawable/button"
                        android:paddingLeft="20dp"
                        android:id="@+id/share"
                        android:layout_marginBottom="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:textSize="16sp"
                        />



                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>