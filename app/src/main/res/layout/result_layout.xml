<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="0dp"
        android:background="@drawable/button"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_weight="10"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:padding="3dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        android:id="@+id/chart"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/chart_icon" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="8"
                        android:id="@+id/layout"
                        android:layout_margin="1dp"
                        android:layout_gravity="center"
                        android:paddingBottom="1dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        >


                        <com.madhuurstta.makta.latobold
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:background="@drawable/black_button"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="RUDRAKSH MORNING"
                            android:textColor="@color/md_white_1000"
                            android:textSize="16sp"

                            />




                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:paddingTop="5dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">


                                <com.madhuurstta.makta.latobold
                                    android:id="@+id/status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:text="RUNNING"
                                    android:textColor="@color/green"
                                    android:textSize="16sp" />


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:visibility="gone">


                                    <cn.iwgang.countdownview.CountdownView
                                        android:id="@+id/timer"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_marginTop="5dp"
                                        app:isHideTimeBackground="true"
                                        app:isShowHour="true"
                                        app:isShowMinute="true"
                                        app:isShowSecond="true"
                                        app:isTimeTextBold="true"
                                        app:suffixGravity="bottom"
                                        app:suffixHour=":"
                                        app:suffixMinute=":"
                                        app:suffixSecond=""
                                        app:suffixTextColor="@color/md_white_1000"
                                        app:suffixTextSize="12sp"
                                        app:timeTextColor="@color/md_white_1000"
                                        app:timeTextSize="15sp" />


                                </RelativeLayout>

                            </LinearLayout>


                            <com.madhuurstta.makta.latobold
                                android:id="@+id/result"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="225-0*-***"
                                android:textColor="@color/md_white_1000"
                                android:textSize="18sp" />




                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="1dp"
                            android:paddingBottom="1dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:paddingRight="5dp"
                                android:orientation="horizontal">

                                <com.madhuurstta.makta.latobold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="OPEN: "
                                    android:textColor="@color/md_white_1000"
                                    android:textSize="14sp"

                                    />

                                <com.madhuurstta.makta.latobold
                                    android:id="@+id/open_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="10:00 AM"
                                    android:textColor="@color/md_white_1000"
                                    android:textSize="14sp"

                                    />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:paddingLeft="5dp"
                                android:layout_height="wrap_content">

                                <com.madhuurstta.makta.latobold
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="CLOSE: "
                                    android:textColor="@color/md_white_1000"
                                    android:textSize="14sp"

                                    />

                                <com.madhuurstta.makta.latobold
                                    android:id="@+id/close_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_horizontal"
                                    android:text="11:00 AM"
                                    android:textColor="@color/md_white_1000"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        </LinearLayout>


                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/play_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/play_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/play_big" />


            </LinearLayout>

        </LinearLayout>




    </LinearLayout>



</LinearLayout>